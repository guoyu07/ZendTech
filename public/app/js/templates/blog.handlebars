<ol class="breadcrumb">
    <li><a href="#/home">Home</a></li>
    <li><a href="#/{{category}}">{{category}}</a></li>
    <li class="active">{{title}}</li>
</ol>
<section class="posts">
    <div class="jumbotron jumbotron-single-post">
        <div class="container single-post">
            <h1 class="text-center">{{title}}</h1>
            <p class="text-center">Posted by {{postedBy}} on {{postedOn}} in {{category}}</p>
        </div>
    </div>
    <div class="post-page row">
        <div class="col-md-9 post-wrapper">
            <div class="text-justify jumbotron jumbotron-post-header">
                <div class="container post-header">
                    <span>Posted by <strong>{{postedBy}}</strong> on <strong>{{postedOn}}</strong> | {{comments.length}} Comments</span>
                </div>
            </div>
            <div class="post-article row">
                <div class="col-md-11 pain-in-the-ass">
                    <div class="image-wrapper">
                        <img class="post-image image-responsive" src="{{image}}" alt="{{title}}">
                    </div>
                </div>
                <div class="article row">
                    <div class="col-md-11">
                        <p>{{article}}</p>
                    </div>
                </div>
                <div class="row video-wrapper">
                    <div class="col-md-11 video-container">
                        <iframe width="860" height="515" src="{{videoUrl}}" frameborder="0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 side-menu-wrapper">
